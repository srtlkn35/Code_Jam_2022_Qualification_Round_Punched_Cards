{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build&Run",
			"dependsOrder": "sequence",
			"dependsOn": [
				"MyBuild",
				"MyRun",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "MyBuild",
			"command": "C:/msys64/mingw64/bin/clang++.exe",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/src/main/*.cpp",
				"-g",
				"${workspaceFolder}/src/solve/*.cpp",
				"-I",
				"${workspaceFolder}/src/main",
				"-I",
				"${workspaceFolder}/src/solve",
				"-o",
				"${workspaceFolder}/build/${workspaceFolderBasename}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "derleyici: C:/msys64/mingw64/bin/clang++.exe"
		},
		{
			"type": "shell",
			"label": "MyRun",
			"command": "${workspaceFolder}/build/${workspaceFolderBasename}.exe",
			"options": {
				"cwd": "${workspaceFolder}/build",
			},
		}
	]
}